<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>54.0</apiVersion>
    <description>Image Cropper</description>
    <isExposed>true</isExposed>
    <targets>
        <target>lightningCommunity__Default</target>
        <target>lightningCommunity__Page</target>
        <target>lightningCommunity__Page_Layout</target>
        <target>lightning__RecordPage</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightningCommunity__Default">
            <property name="recordId" label="Record Id" description="Id of record to which you want to add cropped image" type="String" default="{!recordId}"/>
            <property name="aspectRatio" label="Aspect ratio" type="String"/>
            <property name="maxCropWidth" label="Max crop width" type="Integer"/>
            <property name="maxCropHeight" label="Max crop height" type="Integer"/>
            <property name="minCropWidth" label="Min crop width" type="Integer"/>
            <property name="minCropHeight" label="Min crop height" type="Integer"/>
        </targetConfig>
        <targetConfig targets="lightning__RecordPage">
            <property name="aspectRatio" label="Aspect ratio" type="String"/>
            <property name="maxCropWidth" label="Max crop width" type="Integer"/>
            <property name="maxCropHeight" label="Max crop height" type="Integer"/>
            <property name="minCropWidth" label="Min crop width" type="Integer"/>
            <property name="minCropHeight" label="Min crop height" type="Integer"/>
        </targetConfig>
    </targetConfigs>
    <masterLabel>Image Cropper</masterLabel>
</LightningComponentBundle>
